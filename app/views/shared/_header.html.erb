<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "sample app", "#", id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("home"), home_path %></li>
        <li><%= link_to t("help"), help_path %></li>
        <% if logged_in? %>
          <li><%= link_to t("usr"), users_path %></li>
          <li class="dropdown">
            <%= link_to "#", class: "dropdown-toggle", "data-toggle": "dropdown" do %>
              <%= t "acc" %>
              <b class="caret"></b>
            <% end %>
            <ul class="dropdown-menu">
              <li><%= link_to t("profile"), current_user %></li>
              <li><%= link_to t("settings"), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li> <%= link_to t("log_out"), logout_path, method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("login"), login_path %></li>
        <% end %>
        <li>
          <%= link_to locale: :en do %>
            <%= image_tag("EN.png", alt: t("english"), class: "img-lang") %>
          <% end %>
        </li>
        <li>
          <%= link_to locale: :vi do %>
            <%= image_tag("VN.png", alt: t("vietnamese"), class: "img-lang") %>
          <% end %>
        </li>
      </ul>
    </nav>
  </div>
</header>

<%= render partial: "shared/flash" %>
