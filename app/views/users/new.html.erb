<% provide :title, t("account.sign_up") %>

<h1><%= t "account.sign_up" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user, url: signup_path do |f| %>
      <%= render partial: "shared/error_messages", object: f.object %>
      <%= render partial: "shared/form", locals: {f:f} %>
      <%= f.submit t("account.create_my_account"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
