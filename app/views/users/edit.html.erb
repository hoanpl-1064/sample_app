<% provide :title, t("account.update_profile") %>

<h1><%= t "account.update_profile" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user do |f| %>
      <%= render partial: "shared/form", locals: {f:f} %>
      <%= f.submit t("btn_submit"), class: "btn btn-primary" %>
    <% end %>
    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <a href="http://gravatar.com/emails" target="_blank"><%= t "change" %></a>
    </div>
  </div>
</div>
